{{ define "problem.tmpl" }}
<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>[{{ .problem.StatusCode }}] {{ .problem.Name }} - API Problem Docs</title>
      <style>
         body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: #f8f9fa;
            color: #212529;
         }
         header {
            background-color: #343a40;
            color: #fff;
            padding: 1rem 2rem;
         }
         header h1 {
            margin: 0;
            font-size: 1.8rem;
         }
         header a {
            color: #fff;
            text-decoration: none;
         }
         header a:hover {
            text-decoration: underline;
         }
         main {
            max-width: 900px;
            margin: 2rem auto;
            padding: 0 1rem;
         }
         section.problem {
            background-color: #fff;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
         }
         section.problem h2 {
            margin-top: 0;
            color: #dc3545;
         }
         section.problem .summary {
            font-size: 1.1rem;
            font-weight: 500;
            color: #495057;
            margin-bottom: 1rem;
         }
         section.problem .description {
            line-height: 1.6;
            color: #212529;
         }
         section.problem .description h1,
         section.problem .description h2,
         section.problem .description h3 {
            margin-top: 1.5rem;
            margin-bottom: 0.75rem;
            color: #212529;
         }
         section.problem .description h1 {
            font-size: 1.75rem;
         }
         section.problem .description h2 {
            font-size: 1.5rem;
         }
         section.problem .description h3 {
            font-size: 1.25rem;
         }
         section.problem .description p {
            margin-bottom: 1rem;
         }
         section.problem .description code {
            background-color: #f1f3f5;
            padding: 0.2rem 0.4rem;
            border-radius: 3px;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
         }
         section.problem .description pre {
            background-color: #f1f3f5;
            padding: 1rem;
            border-radius: 4px;
            overflow-x: auto;
            margin: 1rem 0;
         }
         section.problem .description pre code {
            background-color: transparent;
            padding: 0;
         }
         section.problem .description ul,
         section.problem .description ol {
            margin-bottom: 1rem;
            padding-left: 2rem;
         }
         section.problem .description li {
            margin-bottom: 0.5rem;
         }
         section.problem .description blockquote {
            border-left: 4px solid #dee2e6;
            padding-left: 1rem;
            margin: 1rem 0;
            color: #6c757d;
         }
         section.problem .description table {
            border-collapse: collapse;
            width: 100%;
            margin: 1rem 0;
         }
         section.problem .description table th,
         section.problem .description table td {
            border: 1px solid #dee2e6;
            padding: 0.5rem;
            text-align: left;
         }
         section.problem .description table th {
            background-color: #f1f3f5;
            font-weight: 600;
         }
         nav.resources {
            margin-top: 1.5rem;
         }
         nav.resources h3 {
            margin-bottom: 0.5rem;
            color: #495057;
         }
         nav.resources ul {
            padding-left: 1.2rem;
            margin-top: 0.5rem;
         }
         nav.resources li {
            margin-bottom: 0.5rem;
         }
         a {
            color: #0d6efd;
            text-decoration: none;
         }
         a:hover {
            text-decoration: underline;
         }
         .back-link {
            display: inline-block;
            margin-bottom: 1rem;
            color: #6c757d;
         }
      </style>
   </head>
   <body>
      <header>
         <h1><a href="{{ .baseHref }}/">API Problems Docs</a></h1>
      </header>
      <main>
         <a href="{{ .baseHref }}/" class="back-link">‚Üê Back to homepage</a>
         <section class="problem">
            <h2>[{{ .problem.StatusCode }}] {{ .problem.Name }}</h2>
            {{ if ne .problem.Name .problem.Title }}
            <p class="summary">{{ .problem.Title }}</p>
            {{ end }}
            {{ if .problem.Summary }}
            <p class="summary">{{ .problem.Summary }}</p>
            {{ end }}
            {{ if .descriptionHTML }}
            <div class="description">{{ .descriptionHTML }}</div>
            {{ end }}
            {{ if .problem.Links }}
            <nav class="resources">
               <h3>Additional Resources:</h3>
               <ul>
                  {{ range .problem.Links }}
                  <li><a href="{{ .Href }}" target="_blank">{{ .Title }}</a></li>
                  {{ end }}
               </ul>
            </nav>
            {{ end }}
         </section>
      </main>
   </body>
</html>
{{ end }}
