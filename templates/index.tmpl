{{ define "index.tmpl" }}
<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>API Problem Docs</title>
      <style>
         body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: #f8f9fa;
            color: #212529;
         }

         header {
            background-color: #343a40;
            color: #fff;
            padding: 1rem 2rem;
         }
         header h1 {
            margin: 0;
            font-size: 1.8rem;
         }
         header a {
            color: #fff;
            text-decoration: none;
         }
         header a:hover {
            text-decoration: underline;
         }
         main {
            max-width: 900px;
            margin: 2rem auto;
            padding: 0 1rem;
         }
         section.problem-list {
            background: #fff;
            border-radius: 8px;
            padding: 1.5rem;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
         }
         section.problem-list h2 {
            margin-top: 0;
            margin-bottom: 1rem;
            color: #212529;
         }
         ul {
            list-style-type: none;
            padding-left: 0;
         }
         li {
             margin-bottom: 0.8rem;
         }
         a {
            color: #0d6efd;
            text-decoration: none;
         }
         a:hover {
            text-decoration: underline;
         }
         p.description {
            margin: 0.2rem 0 0.8rem 0;
            font-size: 0.95rem;
            color: #495057;
         }
      </style>
   </head>
   <body>
      <header>
         <h1><a href="{{ .baseHref }}">API Problems Docs</a></h1>
      </header>
      <main>
         <section class="problem-list">
            <h2>Known API Problems</h2>
            <ol>
               {{ range $problem := .problems }}
               <li>
                  <a href="{{ trimSuffix $.baseHref "/" }}/{{ $problem.ID }}">[{{ $problem.StatusCode }}] {{ $problem.Name }}</a>
                  <p class="description">{{ $problem.Summary }}</p>
               </li>
               {{ end }}
            </ol>
         </section>
      </main>
   </body>
</html>
{{ end }}
